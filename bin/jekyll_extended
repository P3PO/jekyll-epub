#/usr/bin/env ruby

require 'rubygems'

version = ">= 0"

if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
  version = $1
  ARGV.shift
end

gem 'jekyll', version
jekyll_path = Gem.bin_path('jekyll', 'jekyll', version)

require 'jekyll'
require 'jekyll/extensions'
load_jekyll_extensions

load jekyll_path
